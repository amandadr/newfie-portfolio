{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "jsx": "preserve",
    "paths": {
      "public/*": [
        "./public/*"
      ],
      "icons/*": [
        "./public/icons/*"
      ],
      "@/*": [
        "./src/*"
      ],
      "components/*": [
        "./src/app/components/*"
      ],
      "data/*": [
        "./src/data/*"
      ],
      "pages/*": [
        "./src/pages/*"
      ],
      "utils/*": [
        "./src/utils/*"
      ],
      "hooks/*": [
        "./src/utils/hooks/*"
      ]
    },
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "src",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
